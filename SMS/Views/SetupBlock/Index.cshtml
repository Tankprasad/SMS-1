@model SMS.Models.SetupViewModel.SetupBlockViewModel

@{
    ViewBag.Title = "Block List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/Content/skins/flat/green.css" rel="stylesheet" />
<div class="main-content">
    <div class='row r-below-header'>
        <div class='col-md-8 col-sm-12'>
            <div class="r-page-title">
                <h1>
                    Setup Block
                </h1>
            </div>
        </div>
    </div>
</div>

<input type="button" value="Add New" onclick="addNew()" class="btn btn-primary" />
<div class="clearfix"></div>
<div class="table table-responsive">
    <table class="table table-striped jambo_table bulk_action">
        <thead>
            <tr class="headings">
               
                <th class="column-title">Block Name </th>
                <th class="column-title">Status </th>
                <th class="column-title no-link last">
                    <span class="nobr">Action</span>
                </th>
                <th class="bulk-actions" colspan="7">
                    <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.SetupBlockViewModelList)
            {
                <tr class="even pointer">
                    
                    <td>@item.BlockId</td>
                    <td>@item.Status</td>
                    <td>
                        @Html.ActionLink("Edit", "SetupBlock", new { blockId=item.BlockId})
                        @Html.ActionLink("Delete", "SetupBlock", new { blockId = item.BlockId })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

<div class="modal fade" id="add-block" tabindex="-1" role="dialog" aria-labelledby="addsubject">
    @{Html.RenderAction("Create", "SetupSubjects");}
</div>

@*<div class="modal fade" id="edit-subject" tabindex="-1" role="dialog" aria-labelledby="editsubject">
        @{Html.RenderAction("Edit", "SetupSubjects");}
    </div>*@

<script>

    var addNew = function () {
        $('#add-subject').modal({ backdrop: 'static', keyboard: false });
        $.ajax({
            url: '@Url.Action("Create", "SetupBlock")',
            type: 'GET',
            data: {

            },
            success: function (result) {
                $("#add-block").html(result);
                $("#add-block").modal('show');
            },
            error: function () {
            }
        });
    };

</script>

