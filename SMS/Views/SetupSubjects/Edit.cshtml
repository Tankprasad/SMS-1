
@model SMS.Models.SetupViewModel.SetupSubjectViewModel
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="editSubject">
                Update Subject
            </h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("Edit", "SetupSubjects", FormMethod.Post))
            {    @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.SubjectId)
                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-6">
                            <label>
                                @Html.DisplayFor(model => model.SubjectName)
                            </label>
                            @Html.TextBoxFor(model => model.SubjectName, new { @class = "form-control" })
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-6">
                            
                            @Html.CheckBoxFor(model => model.IsOptional)
                            <label>
                                Is Optional
                            </label>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" value="Update" />
                </div>
            }
        </div>
    </div>
</div>