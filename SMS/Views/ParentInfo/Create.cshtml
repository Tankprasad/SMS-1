@model SMS.Models.ParentInfoViewModel.ParentInfoViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="addParent">
                Add Parent Information
            </h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("Create", "ParentInfo", FormMethod.Post))
            {    @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <label>
                                First Name<span style="color:red">*</span>
                            </label>


                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Middle Name
                            </label>(optional)
                            @Html.TextBoxFor(model => model.MidName, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Last Name<span style="color:red">*</span>
                            </label>
                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <label>
                                Permanent State<span style="color:red">*</span>
                            </label>
                            @Html.TextBoxFor(model => model.PState, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Permanent District<span style="color:red">*</span>
                            </label>
                            @Html.TextBoxFor(model => model.PDistrict, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Permanent Metropolitan
                            </label>
                            @Html.TextBoxFor(model => model.PMetropolitan, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <label>
                                Permanent Sub-Metropolitan
                            </label>
                            @Html.TextBoxFor(model => model.PSubMetropolitan, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Permanent Municipality
                            </label>
                            @Html.TextBoxFor(model => model.PMunicipality, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Permanent GauPalika
                            </label>
                            @Html.TextBoxFor(model => model.PGauPalika, new { @class = "form-control" })
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <label>
                                Permanent Ward No.<span style="color:red">*</span>
                            </label>
                            @Html.TextBoxFor(model => model.PWardNo, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Temporary State
                            </label>
                            @Html.TextBoxFor(model => model.TState, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Temporary District
                            </label>
                            @Html.TextBoxFor(model => model.TDistrict, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <label>
                                Temporary Metropolitan
                            </label>
                            @Html.TextBoxFor(model => model.TMetropolitan, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Temporary Sub-Metropolitan
                            </label>
                            @Html.TextBoxFor(model => model.TSubMetropolitan, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Temporary Municipality
                            </label>
                            @Html.TextBoxFor(model => model.TMunicipality, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <label>
                                Temporary GauPalika
                            </label>
                            @Html.TextBoxFor(model => model.TGauPalika, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Temporary Ward No.
                            </label>
                            @Html.TextBoxFor(model => model.TWardNo, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Blood Group
                            </label>
                            @Html.TextBoxFor(model => model.BloodGroup, new { @class = "form-control" })
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <label>
                                Occupation
                            </label>
                            @Html.TextBoxFor(model => model.Occupation, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Gender
                            </label>
                            @Html.DropDownListFor(model => model.Gender, SMS.Utilities.CommonUtilities.GetGender())
                        </div>
                        <div class="col-sm-4">
                            <label>
                                EmailId
                            </label>
                            @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <label>
                               Mobile No.<span style="color:red">*</span>
                            </label>
                            @Html.TextBoxFor(model => model.CellNumber, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Residence No.
                            </label>
                            @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Citizen No.
                            </label>
                            @Html.TextBoxFor(model => model.CitizenNumber, new { @class = "form-control" })
                        </div>
                    </div>
                </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
            }
        </div>
    </div>
</div>
